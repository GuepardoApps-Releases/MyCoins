<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_start_color"
    android:padding="10dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/cardview_light_background"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/itemTypeImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/contentDescription"
                app:srcCompat="@drawable/bch" />

            <TextView
                android:id="@+id/itemTypeText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/itemTypeImage"
                android:text="@string/short_example"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/SecondaryText" />

            <TextView
                android:id="@+id/itemAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemTypeText"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/itemTypeImage"
                android:gravity="center"
                android:padding="5dip"
                android:text="@string/short_example"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/PrimaryText" />

            <View
                android:id="@+id/centerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/centerView"
                android:layout_toStartOf="@+id/btnEdit">

                <ImageView
                    android:id="@+id/itemEuroAggregation"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/contentDescription"
                    android:padding="5dip"
                    app:layout_heightPercent="50%"
                    app:layout_widthPercent="20%"
                    app:srcCompat="@android:drawable/radiobutton_off_background" />

                <TextView
                    android:id="@+id/itemEuroConversion"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="5dip"
                    android:text="@string/short_example"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/SecondaryText"
                    app:layout_heightPercent="50%"
                    app:layout_marginLeftPercent="20%"
                    app:layout_widthPercent="40%" />

                <TextView
                    android:id="@+id/itemEuroAmount"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="5dip"
                    android:text="@string/short_example"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/SecondaryText"
                    app:layout_heightPercent="50%"
                    app:layout_marginLeftPercent="60%"
                    app:layout_widthPercent="40%" />

                <ImageView
                    android:id="@+id/itemUsDollarAggregation"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/contentDescription"
                    android:padding="5dip"
                    app:layout_heightPercent="50%"
                    app:layout_marginTopPercent="50%"
                    app:layout_widthPercent="20%"
                    app:srcCompat="@android:drawable/radiobutton_off_background" />

                <TextView
                    android:id="@+id/itemUsDollarConversion"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="5dip"
                    android:text="@string/short_example"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/SecondaryText"
                    app:layout_heightPercent="50%"
                    app:layout_marginLeftPercent="20%"
                    app:layout_marginTopPercent="50%"
                    app:layout_widthPercent="40%" />

                <TextView
                    android:id="@+id/itemUsDollarAmount"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="5dip"
                    android:text="@string/short_example"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/SecondaryText"
                    app:layout_heightPercent="50%"
                    app:layout_marginLeftPercent="60%"
                    app:layout_marginTopPercent="50%"
                    app:layout_widthPercent="40%" />

            </android.support.percent.PercentRelativeLayout>

            <com.rey.material.widget.FloatingActionButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_toStartOf="@+id/btnDelete"
                android:contentDescription="@string/contentDescription"
                app:fab_iconSize="25dp"
                app:fab_iconSrc="@android:drawable/ic_menu_edit"
                app:fab_radius="14dp"
                app:rd_backgroundColor="@color/DarkPrimary"
                app:rd_delayClick="none"
                app:rd_enable="true"
                app:rd_rippleColor="@color/colorAccent"
                app:rd_rippleType="touch" />

            <com.rey.material.widget.FloatingActionButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:contentDescription="@string/contentDescription"
                app:fab_iconSize="25dp"
                app:fab_iconSrc="@android:drawable/ic_menu_delete"
                app:fab_radius="14dp"
                app:rd_backgroundColor="@color/DarkRed"
                app:rd_delayClick="none"
                app:rd_enable="true"
                app:rd_rippleColor="@color/LightRed"
                app:rd_rippleType="touch" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>